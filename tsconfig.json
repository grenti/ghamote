{
  "exclude": ["node_modules"],
  "include": ["./src/**/*"],
  "compilerOptions": {
    "jsx": "preserve",
    "module": "commonjs",
    "sourceMap": true,
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "compileOnSave": true
}
