{
  "compilerOptions": {
    "rootDirs": ["src", "lambda"],
    "outDir": "./dist/",
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react",
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"],
  "compileOnSave": true
}
